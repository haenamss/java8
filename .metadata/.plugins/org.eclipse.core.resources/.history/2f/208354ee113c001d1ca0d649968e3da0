package hnm;

public class Hn {
	private String num;
	private String name;
	private int money; //입출금액
	private int balance;
		
	public String getNum() {
		return num;
	}

	public void setNum(String num) {
		this.num = num;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getMoney() {
		return money;
	}

	public void setMoney(int money) {
		this.money = money;
	}

	public int getBalance() {
		return balance;
	}

	public void setBalance(int balance) {  
		this.balance = balance;
	}
	
	public void runDeposit(int money){		//입금작업
		this.balance += money;	
	}
	public void runWithdraw(int money){		//출금작업   
		if(this.balance-money>0){
			this.balance-=money;	
			}else{
			System.out.println("예금 잔액 부족으로 출금 불가");
		}
	}		
	public int runBalace(){
		return balance;
	}
	public void printAccount(){
		System.out.println("해당 계좌의 계좌번호 : "+num);
		System.out.println("해당 계좌의 예금주 : "+name);
		System.out.println("해당 계좌의 잔액 : "+balance);
	}
}


