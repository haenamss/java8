package 
sec2;

import java.util.Scanner;

public class hnmnote {

	public static void main(String[] args) {
		//점수를 입력받아 등급을 구하되, 등급은 90점 이상이면, "A", 80점 이상이면, "B", 
		//70점 이상이면, "C", 60점 이상이면 "D", 그 밖의 점수는 "F"
		//상품은 등급이 "A"이면, "100년 묶은 산삼", "B" 이면, "한우갈비세트",
		//"C"이면, "백화점 상품권", "D" 이면, "문화상품권" 으로 하며, "F"는 "한입만"
/*		switch(기준변수) {
			case "값1":
				실행문1;
				break;
			case "값2":
				실행문2;
				break;
			......
			default:
				실행문n;
*/
		Scanner sr = new Scanner(System.in);
		System.out.println("점수 : ");
		int po = sr.nextInt();
		
		String grade = "";
		if(po>=90){
			grade = "A";
		}else if(po>=80){
			grade = "B";
		}else if(po>=70){
			grade = "C";
		}else if(po>=60){
			grade = "D";
		}else{grade = "F";}
		
		String goods = "";
		switch(grade){
		case "A" :
			goods = "100년 묵은 산삼";
			break;
		case "B" :
			goods = "한우 갈비 세트";
			break;
		case "C" : 
			goods = "백화점 상품권";
			break;
		case "D" : 
			goods = "문화상품권";
			break;
			default : goods = "잉어사탕";
		
								
		}
		System.out.println("당신의 점수는 "+po+"점이며 , 당신의 등급은 "+grade+"이고, 상품은 "+goods+"입니다.");
		
		
	}
}
