package hnm;

public class Hn {	
	public String name;
	public int kor;
	public int eng;
	public int mat;
		
	public Hn(){}
	public Hn(String name){
		this.name = name;					
	}
	public Hn(String name, int kor, int eng, int mat){
		this.name = name; this.kor = kor; this.eng = eng; this.mat = mat;
	}
	
	public int calcTot(){
		int tot = kor + eng + mat;
		return tot;		
	}
	public int calcAvg(){
		int avg = (kor + eng + mat)/3;
		return avg;		
	}
	public String calcHak(){
		String hak = "";
		int avg = this.calcAvg();		
		if(avg>=90){ 
			hak = "A";			
		}else if(avg>=80){
			hak = "B";
		}else if(avg>=70){
			hak = "C";
		}else{
			hak = "D";
		}
		return hak;
	}	
	public String calcRes(){
		int avg = this.calcAvg();
		String hap = "불합격"; 		
		if(avg>=80){
			hap = "합격";
		}
		return hap;
		}
	}
