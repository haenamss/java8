package hnm;

public class Hn {
	String name;
	int kor;
	int eng;
	int mat;
	
	Hn (){}
	Hn (String name){
		this.name = name;
	}
	Hn (String name, int kor, int eng , int mat){
		this.name = name; this.kor = kor; this.eng = eng ; this.mat = mat;
	}
	
	int calcTot(){
		int tot = kor + eng + mat;
		return tot;
	}
	int calcAvg(){
		int avg = this.calcTot()/3;
		return avg;
	}
	String calcHak(){
		int avg = this.calcTot();
			String hak = "";
			if(avg>=90){
				hak = "A";				
			}else if(avg>=80){
				hak = "B";
			}else if(avg>=70){
				hak = "C";
			}else{
				hak = "D";
			}
			return hak;
		}
	String calcRes(){
		int tot = this.calcTot();
		String res = "불합격";
		if(tot>=80){ res = "합격";			
		}
		return res;
		
	}
}

