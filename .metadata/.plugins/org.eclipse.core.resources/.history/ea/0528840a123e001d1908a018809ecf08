package sec3;

public class Tire {
	//멤버 필드
	public int maxRotation;				//최대 회전수(타이어 수명)
	public int accumualatedRotation;	//누적 회전수
	public String location;				//타이어 위치
	
	public Tire(int maxRotation, String location) {
		this.maxRotation = maxRotation;
		this.location = location;
	}
	//멤버 메소드
	public boolean roll(){
		++accumualatedRotation;
		if(accumualatedRotation<maxRotation){
			System.out.println(location + "Tire 수명 : "+(maxRotation-accumualatedRotation));
			return true;
		}else{
			System.out.println("----"+location+" Tire 펑크");
			return false;
		}
	
	}
}