package sec3;

public class MoterCycle {
	public MoterCycle(){};
	Tire frontTire = new Tire(5, "앞쪽");
	Tire backTire = new Tire(7, "뒤쪽");
	
	public int run(){
		System.out.println("----- 오토바이가 달립니다. -----");
		if(frontTire.roll()==false) {
			stop(); return 1;
			}
		if(frontTire.roll()==false) {
			stop(); return 2;
			}
	
		return 0;
		
	}
	public void stop(){
		System.out.println("오토바이가 멈춥니다.");

		
	}
	
	
}
 